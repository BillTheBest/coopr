{
  "name": "apache-httpd",
  "description": "Apache HTTP Server",
  "dependson": [
    "base"
  ],
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "script": "recipe[apache2::default]"
      },
      "configure": {
        "type": "chef-solo",
        "script": "recipe[apache2::default]"
      },
      "start": {
        "type": "chef-solo",
        "script": "recipe[apache2::default],recipe[loom_service_runner::default]",
        "data": "{\"loom\": { \"node\": { \"services\": { \"apache2\": \"start\" } } } }" 
      },
      "stop": {
        "type": "chef-solo",
        "script": "recipe[apache2::default],recipe[loom_service_runner::default]",
        "data": "{\"loom\": { \"node\": { \"services\": { \"apache2\": \"stop\" } } } }" 
      }
    }
  }
}
