{
  "name": "mysql-server",
  "description": "MySQL Server",
  "dependson": [
    "base"
  ],
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "script": "recipe[mysql::server]"
      },
      "configure": {
        "type": "chef-solo",
        "script": "recipe[mysql::server]"
      },
      "start": {
        "type": "chef-solo",
        "script": "recipe[mysql::server],recipe[loom_service_runner::default]",
        "data": "{\"loom\": { \"node\": { \"services\": { \"mysql\": \"start\" } } } }" 
      },
      "stop": {
        "type": "chef-solo",
        "script": "recipe[mysql::server],recipe[loom_service_runner::default]",
        "data": "{\"loom\": { \"node\": { \"services\": { \"mysql\": \"stop\" } } } }" 
      }
    }
  }
}
