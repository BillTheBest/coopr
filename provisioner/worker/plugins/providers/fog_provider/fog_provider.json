{
  "name": "fog",
  "description": "Multi-cloud fog-based provider (Openstack, Rackspace, Joyent)",
  "providertypes": [ "joyent", "openstack", "rackspace" ],
  "aws" : {
    "classname": "FogProviderAWS",
    "parameters": {
      "admin": {
        "fields": {
          "aws_access_key": {
            "label": "Access Key ID",
            "type": "text",
            "tip": "AWS Access Key ID"
          },
          "aws_secret_key": {
            "label": "Secret Access Key",
            "type": "password",
            "tip": "AWS Secret Access Key"
          },
          "aws_credential_file": {
            "label": "AWS Credential file",
            "type": "text",
            "tip": "Full path and file name to AWS credential file as used by AWS command line tools",
          },
          "aws_keyname": {
            "label": "Key name",
            "type": "text",
            "override": true,
            "tip": "Your AWS SSH public key name"
          },
          "aws_keyfile": {
            "label": "Key file",
            "type": "text",
            "tip": "Full path and file name to your AWS SSH private key"
          },
          "aws_region": {
            "label": "AWS Region",
            "type": "select",
            "options": [
              "ap-northeast-1",
              "ap-southeast-1",
              "ap-southeast-2",
              "eu-west-1",
              "sa-east-1",
              "us-east-1",
              "us-west-1",
              "us-west-2"
            ],
            "default": "us-east-1",
            "override": true,
            "tip": "AWS Region"
          }
        },
        "required": [
          [
            "aws_access_key_id",
            "aws_secret_access_key",
            "aws_keyname",
            "aws_keyfile",
            "aws_region"
          ],
          [
            "aws_credential_file",
            "aws_keyname",
            "aws_keyfile",
            "aws_region"
          ]
        ]
      },
      "user": {
        "fields": {
          "security_groups": {
            "label": "Security Group",
            "type": "text",
            "default": "default",
            "tip": "AWS security group"
          },
          "availability_zone": {
            "label": "Availability Zone",
            "type": "text",
            "tip": "AWS Availability Zone"
          }
        },
        "required": [
          []
        ]
      }
    }
  },
  "joyent": {
    "name": "joyent",
    "classname": "FogProviderJoyent",
    "parameters": {
      "admin": {
        "fields": {
          "joyent_username": {
            "label": "User",
            "type": "text",
            "tip": "Your Joyent CloudAPI user name"
          },
          "joyent_password": {
            "label": "Password",
            "type": "password",
            "tip": "Your Joyent CloudAPI password"
          },
          "joyent_keyname" : {
            "label": "Key name",
            "type": "text",
            "tip": "Your Joyent SSH public key name"
          },
          "joyent_keyfile": {
            "label": "Key file",
            "type": "text",
            "tip": "Full path and file name to your Joyent SSH private key"
          },
          "joyent_version": {
            "label": "API version",
            "type": "text",
            "default": "~7.0",
            "tip": "CloudAPI version (~7.0 default)"
          },
          "joyent_api_url": {
            "label": "Region",
            "type": "select",
            "options": [
              "https://us-west-1.api.joyentcloud.com",
              "https://us-sw-1.api.joyentcloud.com",
              "https://us-east-1.api.joyentcloud.com",
              "https://eu-ams-1.api.joyentcloud.com"
            ],
            "default": "https://us-west-1.api.joyentcloud.com",
            "override": true,
            "tip": "Joyent Region"
          }
        },
        "required": [
          [ "joyent_username", "joyent_password" ],
          [ "joyent_username", "joyent_keyname", "joyent_keyfile" ]
        ]
      }
    }
  },
  "openstack": {
    "name": "openstack",
    "classname": "FogProviderOpenstack",
    "parameters": { 
      "admin": {
        "fields": {
          "openstack_username": {
            "label": "User",
            "type": "text",
            "tip": "Your Openstack user name"
          },
          "openstack_password": {
            "label": "Password",
            "type": "password",
            "tip": "Your Openstack password"
          },
          "openstack_tenant": {
            "label": "Tenant",
            "type": "text",
            "tip": "Your Openstack tenant"
          },
          "openstack_auth_url": {
            "label": "Auth URL",
            "type": "text",
            "default": "http://EXAMPLE.DOMAIN.COM:5000/v2.0/tokens",
            "tip": "Your Openstack Keystone API URL"
          },
          "openstack_keyname": {
            "label": "Key name",
            "type": "text",
            "tip": "Your Openstack SSH public key name"
          },
          "openstack_keyfile": {
            "label": "Key file",
            "type": "text",
            "tip": "Path to your Openstack SSH private key file"
          },
          "openstack_ssl_verify_peer": {
            "label": "Verify SSL peers",
            "type": "checkbox",
            "tip": "Verify peer SSL certificates"
          }
        },
        "required": [
          [
            "openstack_username",
            "openstack_password",
            "openstack_tenant",
            "openstack_auth_url",
            "openstack_keyname",
            "openstack_keyfile"
          ]
        ]
      },
      "user": {
        "fields": {
          "security_groups": {
            "type": "text",
            "label": "Security Group",
            "default": "default",
            "tip": "Openstack security groups (comma separated)"
          },
          "availability_zone": {
            "type": "text",
            "label": "Availability Zone",
            "tip": "Openstack Availability Zone"
          },
          "floating_ip": {
            "type": "checkbox",
            "label": "Floating IP",
            "tip": "Request a floating IP address for each node"
          }
        },
        "required": [
          [ ]
        ]
      }
    }
  },
  "rackspace": {
    "name": "rackspace",
    "classname": "FogProviderRackspace",
    "parameters": {
      "admin": {
        "fields": {
          "rackspace_username": {
            "label": "User",
            "type": "text",
            "tip": "Your Rackspace user name"
          },
          "rackspace_api_key": {
            "label": "API key",
            "type": "password",
            "tip": "Your Rackspace API key"
          },
          "rackspace_region": {
            "label": "Region",
            "type": "select",
            "options": [ "dfw", "ord", "iad", "lon", "syd", "hkg" ],
            "default": "dfw",
            "override": true,
            "tip": "Rackspace region"
          }
        },
        "required": [
          [
            "rackspace_username",
            "rackspace_api_key",
            "rackspace_region"
          ]
        ]
      },
      "user": {
        "fields": {
          "rackconnect_wait": {
            "label": "RackConnect Wait",
            "type": "checkbox",
            "tip": "Wait for RackConnect"
          },
          "rackspace_keyname": {
            "label": "Rackspace SSH Keypair",
            "type": "text",
            "tip": "Your Rackspace SSH key name"
          },
          "rackspace_keyfile": {
            "label": "Key file",
            "type": "text",
            "tip": "Path to your Rackspace SSH private key file"
          }
        },
        "required": [
          []
        ]
      }
    }
  }
}
