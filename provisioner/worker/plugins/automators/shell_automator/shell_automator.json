{
  "name": "shell",
  "description": "Run shell commands and scripts",
  "automatortypes": [ "shell" ],
  "shell": {
    "name": "shell",
    "classname": "ShellAutomator",
    "resourceTypes": {
        "scripts": {
            "format": "file"
        },
        "archives": {
            "format": "archive"
        }
    },
    "parameters": {
      "admin": {
        "fields": {
          "script": {
            "label": "Script",
            "override": false,
            "type": "text",
            "tip": "The script or command to run"
          },
          "args": {
            "label": "Arguments",
            "override": false,
            "type": "text",
            "tip": "The arguments to the script"
          }
        },
        "required": [
          [ "script" ]
        ]
      }
    }
  }
}
