{
  "name": "kerberos-master",
  "description": "Configures Kerberos v5 Administration server and KDC",
  "dependencies": {
    "conflicts": [],
    "install": {
      "requires": [ "base" ],
      "uses": []
    },
    "provides": [],
    "runtime": {
      "requires": [ "kerberos-client" ],
      "uses": []
    }
  },
  "provisioner": {
    "actions": {
      "install": {
        "type":"chef-solo",
        "script": "recipe[krb5::kadmin]"
      },
      "configure": {
        "type":"chef-solo",
        "script": "recipe[krb5::kadmin]"
      },
      "initialize": {
        "type":"chef-solo",
        "script": "recipe[krb5::kadmin_init]"
      },
      "start": {
        "type": "chef-solo",
        "script": "recipe[krb5::kadmin_service],recipe[loom_service_runner::default]",
        "data": "{\"loom\": { \"node\": { \"services\": { \"krb5-admin-server\": \"start\" } } } }" 
      },
      "stop": {
        "type": "chef-solo",
        "script": "recipe[krb5::kadmin_service],recipe[loom_service_runner::default]",
        "data": "{\"loom\": { \"node\": { \"services\": { \"krb5-admin-server\": \"stop\" } } } }" 
      }
    }
  }
}
